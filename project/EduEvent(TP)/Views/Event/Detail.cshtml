@model Event

@{
    ViewData["Title"] = "Détail de l'événement";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-info text-white text-center">
                    <h3>Détail de l'Événement</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">Titre</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4 fw-bold">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-bold">Lieu</dt>
                        <dd class="col-sm-8">@Model.Location</dd>

                        <dt class="col-sm-4 fw-bold">Date de l'Événement</dt>
                        <dd class="col-sm-8">@Model.EventDate.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4 fw-bold">Date de Création</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">Retour à la Liste</a>
                </div>
            </div>
        </div>
    </div>
</div>
