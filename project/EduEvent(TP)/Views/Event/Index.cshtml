@model IEnumerable<Event>

@{
    ViewData["Title"] = "Liste des Événements";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Titre</th>
            <th>Description</th>
            <th>Date de l'événement</th>
            <th>Lieu</th>
            <th>Participants max</th>
            <th>Date de création</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evnt in Model)
        {
            <tr>
                <td>@evnt.Title</td>
                <td>@evnt.Description</td>
                <td>@evnt.EventDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@evnt.Location</td>
                <td>@evnt.MaxParticipants</td>
                <td>@evnt.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@evnt.Id" class="btn btn-warning">Modifier</a>
                    <a asp-action="Delete" asp-route-id="@evnt.Id" class="btn btn-danger">Supprimer</a>
                    <a asp-action="Details" asp-route-id="@evnt.Id" class="btn btn-info">Détails</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-success">Créer un nouvel événement</a>
</p>