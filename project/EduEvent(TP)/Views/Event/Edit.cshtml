@model Event

@{
    ViewData["Title"] = "Modifier Événement";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-white text-center">
                    <h3>Modifier un Événement</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-bold">Titre</label>
                            <input asp-for="Title" class="form-control" value="@Model.Title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control">@Model.Description</textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Location" class="form-label fw-bold">Lieu</label>
                            <input asp-for="Location" class="form-control" value="@Model.Location" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="EventDate" class="form-label fw-bold">Date de l'Événement</label>
                            <input asp-for="EventDate" type="datetime-local" class="form-control" value="@Model.EventDate.ToString("yyyy-MM-ddTHH:mm")" />
                            <span asp-validation-for="EventDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MaxParticipants" class="form-label fw-bold">Participants Maximum</label>
                            <input asp-for="MaxParticipants" class="form-control" value="@Model.MaxParticipants" />
                            <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Retour à la Liste</a>
                            <button type="submit" class="btn btn-primary">Modifier l'Événement</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
